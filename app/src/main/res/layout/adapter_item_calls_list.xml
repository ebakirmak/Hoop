<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              style="@style/adapter_item">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgUserProfile"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            style="@style/adapter_item_imgUserProfile"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
        <TextView
                android:id="@+id/txtUserName"
                tools:text="Emre Berk AKIRMAK"
                style="@style/adapter_item_txtName"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgCallType"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    tools:background="@drawable/ic_camera_black"/>

            <TextView
                    android:id="@+id/txtCallCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="(3)"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>

            <TextView
                    android:id="@+id/txtCallDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="21 Nisan 2010 16:30"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
            android:id="@+id/imgCommunicationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@drawable/ic_camera_black"
            android:layout_gravity="center_vertical"/>


</LinearLayout>